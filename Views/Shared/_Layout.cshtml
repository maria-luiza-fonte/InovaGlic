<!DOCTYPE html>
<html lang="pt-BR">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - InovaGlic</title>
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
	<!-- CABEÇALHO -->
	<header class="cabecalho">
		<div class="container">
			<div class="logo">
				<span class="icone-logo">❤️</span>
				<span class="nome-logo">InovaGlic</span>
			</div>
			<nav class="menu">
				<a href="#inicio">Início</a>
				<a href="#recursos">Recursos</a>
				<a href="#beneficios">Benefícios</a>
				<a href="#contato">Contato</a>
				<partial name="_LoginPartial" />
			</nav>
		</div>
	</header>

	<!-- CONTEÚDO PRINCIPAL -->
	<main>
		@RenderBody()
	</main>

	<!-- RODAPÉ -->
	<footer class="rodape">
		<div class="container">
			<p><strong>InovaGlic</strong> - Cuidando da sua saúde com tecnologia</p>
			<p>&copy; 2024 InovaGlic. Todos os direitos reservados.</p>
		</div>
	</footer>

	<script src="~/js/site.js"></script>
	@RenderSection("Scripts", required: false)
</body>
</html>